{
  "manifest_version": 3,
  "name": "Full Page Capture Pro",
  "version": "1.0.2",
  "description": "Full-page capture with an in-tab viewer (zoom, pan, crop, rotate, flip, download).",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Full Page Capture",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["viewer.html", "viewer.js", "viewer.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
